using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace LeapYear
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Write a year: ");
            int year = int.Parse(Console.ReadLine());

            if (year % 4 == 0)
            {
                Console.WriteLine("Yes, this is a leap year!");
            }
            else
            {
                Console.WriteLine("No, this year is not a leap year!");
            }        


            Console.ReadKey();

        }
        
    }
}
